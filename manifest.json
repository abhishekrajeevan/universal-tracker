{
  "manifest_version": 3,
  "name": "Universal To-Do/Done Tracker",
  "version": "0.2.0",
  "description": "One-click save of the current page into a user-owned tracker (To Do / Done), with Google Sheets sync, reminders, and editing.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "downloads",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}