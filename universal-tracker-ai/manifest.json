{
    "manifest_version":  3,
    "name":  "Universal Tracker AI",
    "version":  "0.3.0",
    "description":  "One-click save with AI prefill (tags/category/notes) + Google Sheets sync.",
    "permissions":  [
                        "storage",
                        "tabs",
                        "scripting",
                        "alarms",
                        "downloads",
                        "notifications"
                    ],
    "host_permissions":  [
                             "\u003call_urls\u003e"
                         ],
    "action":  {
                   "default_popup":  "popup.html"
               },
    "background":  {
                       "service_worker":  "background.js"
                   },
    "options_page":  "options.html",
    "icons":  {
                  "16":  "icons/icon16.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "\u003call_urls\u003e"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "run_at":  "document_idle"
                            }
                        ]
}
